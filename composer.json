{
    "name": "romanstruk/smsnotify",
    "description": "Бібліотека для Laravel який реалізує відправку смс повідомлень різними клієнтами по одному API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Struk",
            "email": "romanuch4@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "guzzlehttp/guzzle": "^6.5.5|^7.0.1",
        "ext-json": "*",
        "giggsey/libphonenumber-for-php": "^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "6.x",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "RomanStruk\\SmsNotify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "RomanStruk\\SmsNotify\\Tests\\": "./tests"
        }
    },
    "extra": {
        "laravel": {
          "providers": [
            "RomanStruk\\SmsNotify\\SmsNotifyServiceProvider"
          ],
          "aliases": {
            "SmsNotify": "RomanStruk\\SmsNotify\\SmsNotifyFacade"
          }
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit"
    }
}
